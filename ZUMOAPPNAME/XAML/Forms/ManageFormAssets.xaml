<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="K_Bikpower.ManageFormAssets">
    <ScrollView>
        <StackLayout>

            <StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button x:Name="ScanButton" Text="Scan" Clicked="Scan_Asset_Clicked" WidthRequest="150"/>
                    <Button x:Name="AddButton" Text="Add by Table" Clicked="Add_Clicked" WidthRequest="150"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button x:Name="AssetDetailsButton" Text="View Asset Details" Clicked="Asset_Details_Clicked" IsEnabled="False" WidthRequest="150"/>
                    <Button x:Name="removeAsset" Text="Remove" Clicked="removeAsset_Clicked" IsEnabled="False" WidthRequest="150"/>
                </StackLayout>

                <Button x:Name="DoneButton" Text="Done" HorizontalOptions="Center" Clicked="Done_Clicked" WidthRequest="150"/>
            </StackLayout>

            <ListView x:Name="assetList" ItemsSource="{Binding Assets}" ItemSelected="selectedAsset" HasUnevenRows="false">
                <ListView.Header>
                    <Grid>
                        <Label Grid.Column="0"  Text="Serial Number" HorizontalOptions="Center" FontAttributes="Bold"/>
                        <Label Grid.Column="1" Text="Substation" HorizontalOptions="Center" FontAttributes="Bold"/>
                        <Label Grid.Column="2" Text="Manufacturer" HorizontalOptions="Center" FontAttributes="Bold"/>
                        <Label Grid.Column="3" Text="Equipment Class" HorizontalOptions="Center" FontAttributes="Bold"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Label Grid.Column="0" Text="{Binding SerialNumber}" HorizontalOptions="Center"/>
                                <Label Grid.Column="1" Text="{Binding SubstationCode}" HorizontalOptions="Center"/>
                                <Label Grid.Column="2" Text="{Binding ManufacturerName}" HorizontalOptions="Center"/>
                                <Label Grid.Column="3" Text="{Binding EquipmentClassDescription}" HorizontalOptions="Center"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>